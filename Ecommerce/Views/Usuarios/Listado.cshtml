@using Ecommerce.ViewModels
@model UsuariosListadoViewModel
@{
    ViewData["Title"] = "Listado de usuarios";
    Layout = "../shared/_Layout";
}

<h1>Listado de Usuarios</h1>
@if (Model.Mensaje != null)
{
    <div class="alert alert-success" role="alert">
        @Model.Mensaje
    </div>
}

@if (Model.Usuarios != null)
{
    <form method="post">
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-dark">
                    <tr>
                        <th class="col-10 align-middle">
                            Email
                        </th>
                        <th colspan="2" class="col-2 align-middle">
                            Rol Administrador
                        </th>
                        
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model.Usuarios)
                    {
                        <tr>
                            <td class="col-10">
                                @usuario.Email
                            </td>
                            <td class="col">
                                <button class="btn btn-primary" asp-action="HacerAdmin" asp-route-email="@usuario.Email">Asignar</button>
                            </td>
                            <td class="col">
                                <button class="btn btn-secondary" asp-action="RemoverAdmin" asp-route-email="@usuario.Email">Remover</button>
                            </td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>


    </form>
}