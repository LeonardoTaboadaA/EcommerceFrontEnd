@using Ecommerce.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

@if (ViewData.Keys.Contains("mensaje"))
{
    <p style="color: red;">
        @ViewData[ "mensaje" ]
    </p>
}

<div class="container">
    <div class="text-center">
        <h1 style="color: #0d6efd; font-weight: bold;">Ecommerce</h1>
        <h6>Compra sin complicaciones</h6>
    </div>

    <div class="card h-100" id="cardLogin">
        <div class="card-body">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Correo" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">

                    <input asp-for="Password" class="form-control" placeholder="Contraseña" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="Recuerdame" />
                    <label class="form-check-label" asp-for="Recuerdame"></label>
                </div>

                <div class="text-center mb-3">
                    <button class="btn btn-primary" style="width:100%; font-weight: bold;">Iniciar Sesión</button>
                </div>

                <div class="text-center mb-3">
                    <a class="btn" id="btnCrearCuenta" asp-action="Registro">Crear cuenta nueva</a>
                </div>
                <div class="text-center mb-3">
                    <p>o</p>
                </div>
                <div class="text-center mb-3" style="margin-bottom: 0 !important;">
                    <a class="btn btn" style="width:100%; margin-bottom: 0;" id="btnMicrosoft" asp-action="LoginExterno" asp-route-proveedor="Microsoft">
                        <span id="iconMicrosoft" class="icon"></span>
                        <span id="lblMicrosoft" class="text-center">Continuar con Microsoft</span>
                    </a>
                </div>


            </form>
        </div>
    </div>

</div>




@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}