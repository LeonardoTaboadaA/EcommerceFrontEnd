@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle"></i>
            </a>

            <ul class="dropdown-menu dropdown-menu-end">
                <li><spam class="dropdown-item">Hola, @User.Identity.Name</spam></li>
                <li><hr class="dropdown-divider"></li>
                <li class="nav-item">
                    <form class="form-inline" asp-controller="Usuarios" asp-action="logout">
                        <button type="submit" style="width: 100%;" class="dropdown-item">
                            Cerrar sesión
                        </button>
                    </form>
                </li>
                
            </ul>
        </li>

        
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="Usuarios" asp-action="Login">
                Iniciar Sesión
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="Usuarios" asp-action="Registro">
                Crear Cuenta
            </a>
        </li>
    }
</ul>